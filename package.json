{
    "name": "django-prosemirror",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc -b && vite build",
        "build:dev": "tsc -b && vite build --watch --mode=dev",
        "test": "vitest",
        "test:ci": "vitest --no-color --reporter=verbose --run --coverage",
        "test:coverage": "vitest --reporter=verbose --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "lint": "eslint frontend/",
        "format": "prettier --write frontend/",
        "format:check": "prettier --check frontend/",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test:storybook": "test-storybook --browsers firefox chromium webkit"
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.10.2",
        "@storybook/addon-a11y": "^9.1.6",
        "@storybook/preact-vite": "^9.1.6",
        "@storybook/test-runner": "^0.23.0",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/preact": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.35.0",
        "eslint-plugin-storybook": "^9.1.6",
        "jsdom": "^26.1.0",
        "prettier": "^3.6.2",
        "sass-embedded": "^1.92.1",
        "storybook": "^9.1.6",
        "storybook-addon-tag-badges": "^2.0.2",
        "typescript-eslint": "^8.43.0",
        "vite": "^7.1.5",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@preact/signals": "^2.3.1",
        "clsx": "^2.1.1",
        "crelt": "^1.0.6",
        "microscope-sass": "^2.0.0",
        "preact": "^10.27.0",
        "prosemirror-example-setup": "^1.2.3",
        "prosemirror-menu": "^1.2.5",
        "prosemirror-model": "^1.25.3",
        "prosemirror-schema-basic": "^1.2.4",
        "prosemirror-schema-list": "^1.5.1",
        "prosemirror-state": "^1.4.3",
        "prosemirror-tables": "^1.7.1",
        "prosemirror-utils": "^1.2.2",
        "prosemirror-view": "^1.41.0"
    },
    "storybook": {
        "disableTelemetry": true
    }
}
